  {% include 'theme-nav-drawer' %}
  {% if settings.ajax_cart_method == "drawer" %}
    {% include 'theme-cart' %}
  {% endif %}

  <div id="PageContainer">
    {% include 'theme-header' %}

    <main class="{% unless template == 'index' or template contains 'collection' or template contains 'product' %}wrapper {% endunless %}main-content" role="main">
      {{ content_for_layout }}
    </main>
    {% include 'theme-footer' %}
  </div>

  {{ 'fastclick.min.js' | asset_url | script_tag }}
  {{ 'cookies.min.js' | asset_url | script_tag }}
  {% if template contains 'index' or template contains 'product' %}
    {{ 'slider.min.js' | asset_url | script_tag }}
    {{ 'imagesloaded.min.js' | asset_url | script_tag }}
  {% endif %}
  {{ 'app.js' | asset_url | script_tag }}

  <script>
    {% if resetPassword %}
      $(function() {
        timber.resetPasswordSuccess();
      });
    {% endif %}
  </script>

  {% if settings.ajax_cart_method == "drawer" %}
    {{ 'handlebars.min.js' | asset_url | script_tag }}
    {% include 'ajax-cart-template' %}
    {{ 'ajax-cart.js' | asset_url | script_tag }}
    <script>
      jQuery(function($) {
        ajaxCart.init({
          formSelector: '#AddToCartForm',
          cartContainer: '#CartContainer',
          cartMessage: '#CartMessage',
          addToCartSelector: '#AddToCart',
          cartCountSelector: '#CartCount',
          cartCostSelector: '#CartCost',
          moneyFormat: {{ shop.money_format | json }}
        });
      });

      jQuery(document.body).on('afterCartLoad.ajaxCart', function(evt, cart) {
        // Bind to 'afterCartLoad.ajaxCart' to run any javascript after the cart has loaded in the DOM
        timber.RightDrawer.open();
      });
    </script>
  {% endif %}

  {% comment %}
    Example cookies JS
  {% endcomment %}
  <script>
    if (Cookies('_demo') == null) {
      // set cookie var
      Cookies.set('_demo', true, { expires: 1});
    }
  </script>

  {% comment %}
    Search & account toggles
  {% endcomment %}
  <script>
    // Search
    $('#open_search').on('click', function(open_search) {
      open_search.preventDefault();
      $('#search_bar').addClass('visible');
    });
    $('#search_bar .icon').on('click', function() {
      $('#search_bar').removeClass('visible');
    });
    // Account
    $('#open_account').on('click', function(open_account) {
      open_account.preventDefault();
      $('#account_bar').toggleClass('visible');
    });
  </script>

  {% comment %}
    Example modal popups JS
  {% endcomment %}
  <script>
    // Modals
    jQuery(document).ready(function($){
      // move popups to the end of the body
      $('.popup').detach().appendTo('body');
    	// close popup
    	$('.popup').on('click', '.popup-close, .popup-cancel, .popup-outside', function(event){
      	event.preventDefault();
      	$(this).closest('.popup').removeClass('visible');
    	});
    	// close popup when clicking the esc keyboard button
    	$(document).keyup(function(event){
        if(event.which=='27'){
          $('.popup').removeClass('visible');
        }
      });
    });
    // Open modals based on their ID as data-attribute
    $('.modal-link').on('click', function(event) {
      event.preventDefault();
      var popupId = $(this).attr('data-popup');
      $(popupId + '.popup').addClass('visible');
    });
  </script>

