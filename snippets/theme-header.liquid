<!-- /snippets/theme-header.liquid -->

<header class="site-header" role="banner">

  <div class="grid--full grid--table">

    <!-- begin mobile-nav-icons -->
    <div class="large--hide medium-down--show">
      <button type="button" class="site-nav__link js-drawer-open-left" aria-controls="NavDrawer" aria-expanded="false">
        {% include 'icon' with 'menu' %}
      </button>
      <a href="/cart" class="js-drawer-open-right site-nav__link" aria-controls="CartDrawer" aria-expanded="false">
        {% include 'icon' with 'cart' %}
      </a>
    </div>
    <!-- //mobile-nav-icons -->

    <div class="grid__item large--two-fifths small--two-thirds push--small--one-sixth">
      {% if template == 'index' %}
        <h1 class="site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
      {% else %}
        <div class="h1 site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
      {% endif %}
        {% if settings.logo_use_image %}
          <a href="/" itemprop="url" class="site-header__logo-link">
            <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" itemprop="logo">
          </a>
        {% else %}
          <a href="/" itemprop="url">{{ shop.name }}</a>
        {% endif %}
      {%  if template == 'index' %}
        </h1>
      {% else %}
        </div>
      {% endif %}
    </div>

    <div class="grid__item large--three-fifths medium-down--hide">
      {% include 'theme-nav' %}
    </div>

    <div class="grid__item large--one-fifth large--text-right medium-down--hide user-tools">

      <ul class="icon-menu">
        {% if shop.customer_accounts_enabled %}
          <li>
            <a href="/account" id="open_account" title="{{ 'layout.customer.account' | t }}">{% include 'icon' with 'account' %}</a>
          </li>
        {% endif %}
        <li>
          <a href="/search" id="open_search" title="{{ 'general.search.title' | t }}">
            {% include 'icon' with 'search' %}
          </a>
        </li>
        <li>
          <a href="/cart" class="site-header__cart-toggle js-drawer-open-right" aria-controls="CartDrawer" aria-expanded="false">
            {% include 'icon' with 'cart-mini' %}
            <span id="CartCount">{{ cart.item_count }}</span>
          </a>
        </li>

      </ul>

      <div id="account_bar" class="text-center">
        {% include 'account-bar' %}
      </div>

      <div id="search_bar">
        {% include 'icon' with 'close' %}
        {% include 'search-bar' %}
      </div>

    </div>

  </div>

</header>
