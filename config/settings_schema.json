[
  {
    "name": "theme_info",
    "logo": "https:\/\/elkfox.com\/brand\/elkfox_square_300.png",
    "settings": [
      {
        "type": "header",
        "content": "Custom Theme by Elkfox v1.0"
      },
      {
        "type": "paragraph",
        "content": "This theme has been designed specifically for your store. Please note that removing this notice or the credit link in the footer of your site is not permitted. Need help? Please contact us via [help@elkfox.com](mailto:help@elkfox.com) for assistance."
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "General colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary",
        "default": "#204a80",
        "info": "Used for text links, and primary buttons"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary",
        "default": "#dcdcdc",
        "info": "Used for secondary buttons"
      },
      {
        "type": "color",
        "id": "color_tertiary",
        "label": "Tertiary",
        "default": "#e5e5e5"
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "color",
        "id": "color_body_bg",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Text",
        "default": "#333333"
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "checkbox",
        "id": "logo_use_image",
        "label": "Use custom logo"
      },
      {
        "type": "image",
        "id": "logo.png",
        "label": "Custom logo",
        "max-width": 700,
        "max-height": 300,
        "info": "700 x 300px .png"
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Max logo width",
        "default": "450",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "checkbox",
        "id": "favicon_enable",
        "label": "Use custom icon"
      },
      {
        "type": "image",
        "id": "favicon.png",
        "label": "Icon",
        "max-width": 32,
        "max-height": 32,
        "info": "32 x 32px .png required"
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "checkbox",
        "id": "footer_social_enable",
        "label": "Show social media icons"
      },
      {
        "type": "checkbox",
        "id": "footer_newsletter_enable",
        "label": "Show newsletter field"
      },
      {
        "type": "text",
        "id": "newsletter_form_action",
        "label": "MailChimp form action URL",
        "info": "[Where do I find my MailChimp form action URL?](http:\/\/docs.shopify.com\/support\/configuration\/store-customization\/where-do-i-get-my-mailchimp-form-action)"
      }
    ]
  },
  {
    "name": "Cart page",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes"
      },
      {
        "type": "checkbox",
        "id": "cart_vendor_enable",
        "label": "Show product vendor"
      },
      {
        "type": "select",
        "id": "ajax_cart_method",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
